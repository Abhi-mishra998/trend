# Trend App DevOps - Environment Variables
# ==========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# AWS Credentials (if not using AWS CLI profile)
# ----------------------------------------------
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here
# AWS_SESSION_TOKEN=your_session_token_here  # Only if using temporary credentials

# DockerHub Credentials
# ---------------------
# Used by Jenkins for pushing images
# DOCKERHUB_USERNAME=your_dockerhub_username
# DOCKERHUB_PASSWORD=your_dockerhub_password_or_token

# GitHub Credentials (Optional)
# -----------------------------
# Used for private repositories
# GITHUB_TOKEN=your_github_personal_access_token

# Jenkins Configuration
# ---------------------
# JENKINS_ADMIN_PASSWORD=your_jenkins_admin_password

# Grafana Configuration
# ---------------------
# Set in config.yaml instead
# GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password

# Deployment Configuration
# ------------------------
# KUBECONFIG=./kubeconfig  # Path to kubeconfig file

# Backup Configuration
# --------------------
# BACKUP_ENCRYPTION_KEY=your_backup_encryption_key

# Notification Configuration (Optional)
# -------------------------------------
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# EMAIL_SMTP_SERVER=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_FROM=your-email@example.com
# EMAIL_PASSWORD=your_email_password

# Debug Configuration
# -------------------
# DEBUG=false
# VERBOSE=false
# LOG_LEVEL=info  # Options: debug, info, warn, error

